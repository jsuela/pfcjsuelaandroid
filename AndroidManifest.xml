<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jsuelapfc.preguntaras"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.GET_TASKS"></uses-permission>
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Login"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".StartupReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
            </intent-filter>
        </receiver>
        
        
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".Ranking"></activity>
        <activity android:name=".QuestionsList"></activity>
        <activity android:name=".Listing"></activity>
        <service android:name=".MiServicioPreguntas"></service>
        <activity android:name=".Tips"></activity>
        <activity android:name=".Refresh"></activity>
        <activity android:name=".SingleQuestion" android:configChanges="keyboardHidden|orientation"></activity>  
    </application>

</manifest>