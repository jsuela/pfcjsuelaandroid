<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#313738"
  >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:padding="5dip"
	    >
	

	
	  <TextView
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:paddingTop = "5dip"
		  android:layout_marginLeft="10dip"
		  android:textStyle="bold|italic"
		  android:textColor="#FFF"
		  android:text = "Usuario: ">
	  </TextView>
	
	
		  <EditText
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:layout_marginTop="1dip"
			  android:layout_marginLeft="10dip"
			  android:layout_marginRight="10dip"
			  android:id="@+id/loginusuario"
			  >
	  	</EditText>
	  	
	  	
	  	  <TextView
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:paddingTop = "1dip"
			  android:layout_marginLeft="10dip"
			  android:textStyle="bold|italic"
			  android:textColor="#FFF"
			  android:text = "Contraseña: ">
	  </TextView>
	  	
	  	<EditText
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:layout_marginTop="1dip"
			  android:layout_marginLeft="10dip"
			  android:layout_marginRight="10dip"
			  android:password="true"
			  android:id="@+id/loginpassword"
			  >
	  	</EditText>
	  	
	  	  <TextView
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:paddingTop = "1dip"
			  android:layout_marginLeft="10dip"
			  android:textStyle="bold|italic"
			  android:textColor="#FFF"
			  android:text = "Repita contraseña: ">
	  </TextView>
	  	
	  	<EditText
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:layout_marginTop="1dip"
			  android:layout_marginLeft="10dip"
			  android:layout_marginRight="10dip"
			  android:password="true"
			  android:id="@+id/loginpassword2"
			  >
	  	</EditText>
	  	
	  		  <TextView
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:paddingTop = "1dip"
		  android:layout_marginLeft="10dip"
		  android:textStyle="bold|italic"
		  android:textColor="#FFF"
		  android:text = "Nombre y apellidos ">
	  </TextView>
	
	
		  <EditText
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:layout_marginTop="1dip"
			  android:layout_marginLeft="10dip"
			  android:layout_marginRight="10dip"
			  android:id="@+id/loginnombreyapellidos"
			  >
	  	</EditText>
	  	
	  	
		  
	  <TextView
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:paddingTop = "1dip"
		  android:layout_marginLeft="10dip"
		  android:textStyle="bold|italic"
		  android:textColor="#FFF"
		  android:text = "E-mail: ">
	  </TextView>
	
	
		  <EditText
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:layout_marginTop="1dip"
			  android:layout_marginLeft="10dip"
			  android:layout_marginRight="10dip"
			  android:id="@+id/logincorreo"
			  >
	  	</EditText>
	  	
	  	<Spinner
		    android:id="@+id/colegios_spinner"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
			 />
	  	
	  		  <TextView
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:paddingTop = "1dip"
		  android:layout_marginLeft="10dip"
		  android:textStyle="bold|italic"
		  android:textColor="#FFF"
		  android:text = "Si no encuentras tu colegio o universidad, avisa a tu profesor para darlo de alta">
	  </TextView>

	  	
	  	<Button 
	        	android:id="@+id/dardealta"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
	        	android:layout_marginTop = "2dip"
	        	android:layout_marginBottom = "0dip"
	      		android:layout_gravity="center"
	        	/>
	  	



	
	
	</LinearLayout>
</ScrollView>
